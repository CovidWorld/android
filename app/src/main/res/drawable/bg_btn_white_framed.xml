<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:state_pressed="true">
		<shape>
			<corners android:radius="@dimen/button_radius" />
			<padding android:bottom="@dimen/button_padding_vert" android:left="@dimen/button_padding_horz" android:right="@dimen/button_padding_horz" android:top="@dimen/button_padding_vert" />
			<solid android:color="#eee" />
			<stroke android:color="#33000000" android:width="1dp" />
		</shape>
	</item>
	<item>
		<shape>
			<corners android:radius="@dimen/button_radius" />
			<padding android:bottom="@dimen/button_padding_vert" android:left="@dimen/button_padding_horz" android:right="@dimen/button_padding_horz" android:top="@dimen/button_padding_vert" />
			<solid android:color="#fff" />
			<stroke android:color="#33000000" android:width="1dp" />
		</shape>
	</item>
</selector>
